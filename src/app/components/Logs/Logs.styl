@import '../common.styl'


.root
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  background-color: $blueGray100
  overflow: auto
  padding: 12px

.chartWrapper
  position: relative
  margin: 0 auto
  height: 100%
  max-height: 500px
  width: 100%
  max-width: 800px
  background-color: $white
  .chart
    position: absolute
    left: 0
    top: 0

.maxValue
  box-sizing: border-box
  margin: 0 auto
  width: 100%
  max-width: 800px
  padding: 5px
  background-color: $white
  border-bottom: 1px solid $blueGray100