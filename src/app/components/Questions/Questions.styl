@import '../common.styl'


.root
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  overflow: auto

.wrapper
  padding: 20px 20px 20px 0
  max-width: 800px
  margin: 0 auto
  min-height: 100%
  border-left: 1px solid rgba(0,0,0,0.1)
  border-right: 1px solid rgba(0,0,0,0.1)

.group
  padding: 0 0 0 20px

.groupTitle
  padding: 10px
  cursor: pointer
  &:hover
    background-color: rgba(0,0,0,0.1);

.question
  padding: 10px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis